[Container]
Image=maxchernoff.ca/viewvc:latest
AutoUpdate=registry

DropCapability=all
AddCapability=CAP_NET_BIND_SERVICE
NoNewPrivileges=true
ReadOnly=true
ReadOnlyTmpfs=false

Volume=%h/viewvc/:/srv/:rw
Volume=/home/svn/:/mnt/:ro
PublishPort=127.0.0.1:8080:8080

[Service]
Restart=always

CPUAccounting=yes
CPUQuota=200%
IOAccounting=yes
IOReadBandwidthMax=100k
IOWriteBandwidthMax=100k

[Install]
WantedBy=default.target
